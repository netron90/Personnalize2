<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_default_elevation"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/block_delete_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/delete_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bloc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/block_delete_doc"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/document_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="NOM DU DOCUMENT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />
                <TextView
                    android:id="@+id/document_pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/document_name"
                    android:text="15 pages"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar_spli_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/bloc1"
                android:layout_marginTop="8dp"
                android:background="@color/colorDarkhBlack"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"></RelativeLayout>
            <RelativeLayout
                android:id="@+id/block2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar_spli_1"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/text_option_power_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power_point_option"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/switch_power_point_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_option_power_point"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/block2"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/text_option_mise_en_forme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mise_en_forme_option"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/switch_mise_en_forme_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_option_mise_en_forme"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/block4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/block3"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/text_option_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_date"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_option_date"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_marginRight="16dp"
                    android:text="@string/no_date_selected"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar_spli_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/block4"
                android:layout_marginTop="8dp"
                android:background="@color/colorDarkhBlack">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar_spli_2">
                <RelativeLayout
                    android:id="@+id/edit_power_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/icon_edit_power_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mode_edit_black_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/edit_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_toRightOf="@id/edit_power_point">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_today_black_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/send_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:padding="10dp"
                    android:layout_toRightOf="@id/edit_date">
                    <TextView
                        android:id="@+id/send_document_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/send_document"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="16dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_send_black_24dp"
                        android:layout_toRightOf="@id/send_document_text"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>